<query id="getComponentList" action="select">
    <tables>
        <table name="editor_components" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <condition operation="equal" column="enabled" var="enabled" />
    </conditions>
    <navigation>
        <index var="sort_index" default="component_name" order="asc" />
    </navigation>
</query>
