<query id="getSpammerList" action="select">
  <tables>
    <table name="spamfilter_denied_ip" />
  </tables>
  <columns>
    <column name="*" />
  </columns>
  <conditions>
    <condition operation="equal" column="ipaddress" var="ipaddress" />
  </conditions>
  <navigation>
    <index var="sort_index" order="desc" />
  </navigation>
</query>
