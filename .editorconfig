# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.{css,scss,sass,less,js,jsx,json,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
