<query id="getMemberInfo" action="select">    
    <tables>
        <table name="member" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <query operation="equal" column="regdate" alias="documentMaxRegdate">
            <tables>
                    <table name="documents" />
            </tables>
            <columns>
                    <column name="max(regdate)" alias="maxregdate" />
            </columns>
        </query>
    </conditions>
</query>